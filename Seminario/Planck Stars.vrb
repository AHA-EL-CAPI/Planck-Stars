\frametitle{Schwarzschild Black hole}

\textbf{Schwarzschild metric}
\begin{equation}
\label{sch}
ds^2 = -\left(1 - \frac{2m}{r} \right) dt^2 + \left(1 - \frac{2m}{r} \right)^{-1}dr^2 + r^2d\Omega ^2
\end{equation}

